<?xml version="1.0" encoding="UTF-8"?>
<theme>
<formatVersion>7</formatVersion>

	<customView name="videocarousel" inherits="gamecarousel">


   <text name="md_name">
		<visible>false</visible>  
    </text>	

  	 <video name="dragon eyes" extra="true">
		<visible>false</visible>  
     </video>

      <rating name="md_rating">
		<visible>true</visible>
      </rating>


   		<image name="md_thumbnail">
			<origin>0.5 0.5</origin>
			<pos>0.125 0.835</pos>
			<maxSize>0.26 0.26</maxSize>
		<storyboard event="activate">
        <animation property="x" from="0.05" begin="0" duration="500" autoreverse="false" mode="easyInOut"/>
		</storyboard>
			<zIndex>999</zIndex>
		</image>

	<image name="logos" extra="true">
        <pos>0.41 0.04</pos>
        <maxSize>0.2 0.2</maxSize>
		<path>./default/_inc/logo.png</path>
		<path>./_inc/clearlogos/${system.theme}.png</path>
		<color>ffffff</color>
	    <zIndex>999</zIndex>
	</image>

  		<image name="md_marquee">
        <pos>0.837 0.853</pos>
        <maxSize>0.2 0.15</maxSize>
			<linearSmooth>true</linearSmooth>
			<storyboard event="activate">
		<animation property="rotation" to="720" begin="1000" autoreverse="false" duration="500"/>
		<animation property="rotation" to="-720" begin="3000" autoreverse="false" duration="500"/>
			</storyboard>
			<zIndex>999</zIndex> 
		</image>

      <rating name="md_rating">
         <color>ffffff</color>
         <zIndex>999</zIndex>       
         <pos>0.392 0.792</pos>
         <size>0.1 0.1</size>
         <filledPath>./_inc/images/star_green.png</filledPath>
         <unfilledPath>./_inc/images/star_empty.png</unfilledPath>
      </rating>

     <video name="md_video">
		<color>ffffff</color>
        <pos>0.505 0.51</pos>
        <origin>0.5 0.5</origin>
        <size>0.482 0.52</size>
		<delay>0.5</delay>
		<effect>none</effect>		 
        <showSnapshotNoVideo>false</showSnapshotNoVideo>
        <showSnapshotDelay>false</showSnapshotDelay>
		<zIndex>998</zIndex>
     </video> 

	   <image name="menu6frame" extra="true">
         <origin>0 0</origin>
         <pos>-0.08 0.038</pos>
         <size>1 1</size>
         <path>./_inc/frames/menu6frame.png</path>
		<storyboard event="activate">
        <animation property="y" from="0" begin="0" duration="700" mode="easeOut"/>
        <animation property="opacity" from="0" to="1" duration="1110" mode="easeIn"/>
        <animation property="scale" from="0" to="1" duration="700" mode="easeOut"/>
        </storyboard>
		 <zIndex>999</zIndex>
      </image>

	</customView>
</theme>
