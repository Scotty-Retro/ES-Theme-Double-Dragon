<?xml version="1.0" encoding="UTF-8"?>
<theme>
<formatVersion>7</formatVersion>

   <!---------------------------gamecarousel------------------------------------- -->

<view name="gamecarousel">
<gamecarousel name="gamecarousel">
<zIndex>43</zIndex>	      
<type>horizontal</type>
<pos>0 0</pos>
<size>1 1</size>
<logoSize>0.65 0.65</logoSize>
<logoScale>0.4</logoScale>
<color>00000000</color>
<maxLogoCount>3</maxLogoCount>
<logoAlignment>center</logoAlignment>   
<imageSource>marquee</imageSource>
            <zIndex>997</zIndex> 
</gamecarousel> 


  	 <video name="dragon eyes" extra="true">
        <path>./_inc/dragon eyes.mp4</path>           
        <pos>0.5 0.225</pos>
        <origin>0.5 0.5</origin>
        <size>1 1</size>
        <showSnapshotNoVideo>false</showSnapshotNoVideo>
        <showSnapshotDelay>false</showSnapshotDelay>
        <color>FFFFFF</color>
        <zIndex>1</zIndex>
     </video>

	   <image name="gcframe" extra="true">
         <origin>0 0</origin>
         <pos>0 0</pos>
         <size>1 1</size>
         <path>./_inc/frames/gc.png</path>
		 <zIndex>2</zIndex>
      </image>

     <helpsystem name="help">
	 <iconColor>FFFFFF</iconColor>
     <fontSize>0.03</fontSize>
     <origin>0.5 0.5</origin>
     <pos>0.5 0.985</pos>
       <fontPath>./_inc/fonts/.ttf</fontPath>
     </helpsystem>
	    
    <text name="gamecarouselLogoText">
		<color>FFFFFFFF</color>
		<glowColor>00000050</glowColor>
		<glowSize>3</glowSize>
		<glowOffset>3</glowOffset>
		<lineSpacing>1.0</lineSpacing>
        <fontPath>./_inc/fonts/.ttf</fontPath>
        <fontSize>0.030</fontSize>
    </text>	

   		<image name="md_thumbnail">
			<origin>0.5 0.5</origin>
			<pos>0.13 0.825</pos>
			<maxSize>0.29 0.29</maxSize>
		<storyboard event="activate">
        <animation property="x" from="-0.35" begin="0" duration="500" autoreverse="false" mode="easyInOut"/>
		</storyboard>
			<zIndex>999</zIndex>
		</image>
		
   		<image name="md_marquee">
			<pos>0.505 0.134</pos>
			<maxSize>0.253 0.199</maxSize>
			<origin>0.5 0.5</origin>
			<linearSmooth>true</linearSmooth>
			<storyboard event="activate">
		<animation property="rotation" to="720" begin="1000" autoreverse="false" duration="500"/>
		<animation property="rotation" to="-720" begin="3000" autoreverse="false" duration="500"/>
			</storyboard>
			<zIndex>999</zIndex> 
		</image>

      <rating name="md_rating">
		<visible>false</visible>
      </rating>
	

	<text name="md_name">
		<fontPath>./_inc/fonts/.ttf</fontPath>
		<fontSize>0.075</fontSize>
		<pos>0.25 0.85</pos>
		<size>0.525 0.0248148148148148</size>
		<alignment>center</alignment>
		<color>ffffff</color>
		<glowColor>10101099</glowColor>			
		<glowSize>3</glowSize>			
	</text>
	
	<image name="logos" extra="true">
        <pos>0.8 0.8</pos>
        <maxSize>0.2 0.2</maxSize>
		<path>./default/_inc/logo.png</path>
		<path>./_inc/green logos/${system.theme}.png</path>
		<color>ffffff</color>
	    <zIndex>999</zIndex>
	</image>
		
</view>  
   
   </theme>
