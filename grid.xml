<?xml version="1.0" encoding="UTF-8"?>
<theme>
<formatVersion>7</formatVersion>

   <!---------------------------grid------------------------------------- -->

   <view name="grid">
 
  
     <helpsystem name="help">
	 <iconColor>FFFFFF</iconColor>
	 <backgroundColor>FFFFFF</backgroundColor>
     <fontSize>0.03</fontSize>
     <origin>0.5 0.5</origin>
     <pos>0.625 0.985</pos>
       <fontPath>./_inc/fonts/Digital-Serial-Bold-folder.ttf</fontPath>
        <zIndex>999</zIndex>
     </helpsystem>
	 
	   <image name="gridbg" extra="true">
         <origin>0 0</origin>
         <pos>0 0</pos>
         <size>1 1</size>
         <path>./_inc/gridbg.png</path>
		 <zIndex>998</zIndex>
      </image>

  	 <video name="animated flames" extra="true">
        <path>./_inc/green fire.mp4</path>           
        <pos>0.5 0.5</pos>
        <origin>0.5 0.5</origin>
        <size>1 1</size>
        <showSnapshotNoVideo>false</showSnapshotNoVideo>
        <showSnapshotDelay>false</showSnapshotDelay>
        <color>FFFFFF</color>
        <zIndex>1</zIndex>
     </video>

   		<image name="md_marquee">
			<pos>0.15 0.134</pos>
			<maxSize>0.253 0.199</maxSize>
			<origin>0.5 0.5</origin>
			<linearSmooth>true</linearSmooth>
   <storyboard event="activate">
        <animation property="y" from="0.01" begin="0" duration="350" autoreverse="false" mode="easyInOut"/>
		</storyboard>
			<zIndex>999</zIndex> 
		</image>

		<image name="logo03" extra="true">
			<origin>0.5 0.5</origin> 
			<pos>0.13 0.9</pos>
			<maxSize>0.275 0.275</maxSize>
		    <path>./_inc/green logos/${system.theme}.png</path>
			<linearSmooth>true</linearSmooth>
			<zIndex>999</zIndex>
			</image>
   	
     <video name="md_video">
		<color>ffffff</color>
        <pos>0.66 0.35</pos>
        <origin>0.5 0.5</origin>
        <size>0.645 0.59</size>
		<delay>none</delay>
		<effect>none</effect>		 
        <showSnapshotNoVideo>false</showSnapshotNoVideo>
        <showSnapshotDelay>false</showSnapshotDelay>
		<zIndex>1</zIndex>
     </video>

		<text name="md_description">
			<pos>0.005 0.25</pos>
			<size>0.3 0.33</size>
			<color>FFFFFF</color>
			<fontSize>0.0275</fontSize>
			<forceUppercase>1</forceUppercase>
			<fontPath>./_inc/fonts/.ttf</fontPath>
			<alignment>left</alignment>
			<zIndex>999</zIndex>
		</text>

	<imagegrid name="gamegrid">
	  <pos>0.4 0.475</pos>
      <size>0.6 0.7</size>
      <padding>0.02 0.02 0.02 0.02</padding>
      <scrollDirection>horizontal</scrollDirection>
      <autoLayout>6 1</autoLayout>
      <autoLayoutSelectedZoom>1.25</autoLayoutSelectedZoom>
      <margin>0.03 0.03</margin>
      <centerSelection>false</centerSelection>
      <scrollLoop>true</scrollLoop>
      <imageSource>thumb</imageSource>
      <zIndex>300</zIndex>  
    </imagegrid>
    
	<gridtile name="default">
		<backgroundColor>00000000</backgroundColor>
		<backgroundEdgeColor>00000000</backgroundEdgeColor>
		<backgroundCornerSize>9 9</backgroundCornerSize>
		<selectionMode>image</selectionMode>
		<padding>6 6</padding>
		<reflexion>0 0</reflexion>
		<saturation>1</saturation>
	</gridtile>

	<gridtile name="selected">
		<backgroundCenterColor>ca9b5380</backgroundCenterColor>
		<backgroundEdgeColor>ca9b5380</backgroundEdgeColor>
		<imageColor>ffffff</imageColor>
		<saturation>1.2</saturation>
	</gridtile>

	<ninepatch name="gridtile.background:selected">
		<animateColor>39FF1480</animateColor>
		<animateColorTime>160</animateColorTime>
	</ninepatch>
</view>
   
   </theme>
